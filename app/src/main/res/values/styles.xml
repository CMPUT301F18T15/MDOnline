        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@color/editTextHint</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>
    <style name="MainTheme" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlack</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@color/editTextHint</item>
        <item name="android:colorBackground">@color/background_material_light</item>
